{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:allNonMajor",
        "helpers:pinGitHubActionDigests",
        ":semanticCommits"
    ],
    "labels": [
        "dependencies"
    ],
    "schedule": [
        "before 6am"
    ],
    "timezone": "Asia/Jakarta",
    "docker": {
        "enabled": true,
        "rangeStrategy": "bump"
    },
    "npm": {
        "packageRules": [
            {
                "matchUpdateTypes": [
                    "minor",
                    "patch"
                ],
                "matchCurrentVersion": "!/^0/",
                "automerge": true
            },
            {
                "matchDepTypes": [
                    "engines"
                ],
                "enabled": false
            },
            {
                "matchPackagePatterns": [
                    "@clytage-pkg"
                ],
                "groupName": "Clytage Dependencies"
            }
        ],
        "rangeStrategy": "bump"
    }
}
